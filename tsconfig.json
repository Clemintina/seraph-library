{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "commonjs",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "lib",
		"declaration": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"pretty": true,
		"removeComments": true,
		"lib": [
			"ES6"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
